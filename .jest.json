{
  "collectCoverage": true,
  "coverageReporters": ["json", "lcov", "text"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "coveragePathIgnorePatterns": [
    "/src/loaders",
    "/src/managers",
    "/src/systems",
    "/src/utils",
    "/src/math"
  ]
}
