root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,tsx,vue,html,css,less}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{json}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
