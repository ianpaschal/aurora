{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": [],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "space-in-parens": [
      "error",
      "always",
      {
        "exceptions": [
          "{}"
        ]
      }
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "space-infix-ops": 2,
    "template-curly-spacing": [
      2,
      "always"
    ],
    "array-bracket-spacing": [
      2,
      "always"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "computed-property-spacing": [
      2,
      "always"
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "arrow-parens": [
      2,
      "always"
    ],
    "semi": [
      2,
      "always"
    ],
    "quotes": [
      2,
      "double"
    ],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "prefer-const": 1,
    "complexity": [
      1,
      5
    ]
  }
}
